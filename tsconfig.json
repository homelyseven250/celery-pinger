{
    "compilerOptions": {
        "lib": ["ES2022"],
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2020",
        "esModuleInterop": true,
        "jsx": "react",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "resolveJsonModule": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}